{
  "expo": {
    "name": "JobSync",
    "slug": "jobsync",
    "scheme": "vibecode",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "sdkVersion": "53.0.0",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.vibecode.jobsync.yos9j3",
      "buildNumber": "9",
      "infoPlist": {
        "NSCalendarsUsageDescription": "JobSync accesses your calendar to help you schedule and manage events",
        "NSContactsUsageDescription": "JobSync accesses your contacts to help you connect and share with friends",
        "NSCameraUsageDescription": "JobSync uses the camera to capture photos and videos for your content",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "package": "com.vibecode.jobsync.yos9j3",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_CONTACTS",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./icon.png"
    },
    "icon": "./icon.png",
    "splash": {
      "image": "./icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "extra": {
      "eas": {
        "projectId": "1a20e6d8-8967-49b2-a3ba-ea0fd65e26d6"
      }
    }
  }
}
